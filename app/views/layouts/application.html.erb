<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <p class = "flash"> 
      <%= flash.notice %> 
    </p>

    <div id="sideNav">
      <p> <strong> Navigation Links </strong> </p>
      <ul>
        <li> <%= link_to "All Articles", articles_path %> </li>
        <li> <%= link_to "All Tags", tags_path %> </li>
        <li> <%= link_to "All Authors", authors_path %> </il>
      </ul>
    </div>

    <div id="container">
      <div id="content">
        <%= yield %>
        <hr>
        <h6>
          <% if logged_in? %>
            <%= "Logged in as #{current_user.email}" %>
            <%= link_to "(logout)", logout_path %>
          <% else %>
            <%= link_to "(login)", login_path %>
          <% end %>
        </h6>
      </div>
    </div>
  </body>
</html>
